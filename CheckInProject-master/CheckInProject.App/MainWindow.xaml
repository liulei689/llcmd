<Window x:Class="CheckInProject.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckInProject.App"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:CheckInProject.App.Pages"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Style="{StaticResource UiWindow}"
        Icon="/Icon.png"
        Title="人脸签到系统"
        MinWidth="900" MinHeight="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <wpfui:TitleBar Title="人脸签到系统" Grid.Row="0" />

        <Grid x:Name="RootMainGrid" Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 侧边导航 -->
            <wpfui:NavigationStore
                x:Name="RootNavigation"
                Grid.Column="0"
                Margin="6,0,6,0"
                Frame="{Binding ElementName=RootFrame}"
                SelectedPageIndex="0">
                <wpfui:NavigationStore.Items>
                    <wpfui:NavigationItem
                        Click="HomePage_Click"
                        Content="首页"
                        Icon="Home24" Cursor="Hand" />
                    <wpfui:NavigationItem
                        Click="ScanDynamicPicturePage_Click"
                        Content="开始签到"
                        Icon="Camera24" Cursor="Hand" />
                    <wpfui:NavigationItem
                        Click="FaceDataManagementPage_Click"
                        Content="人脸管理"
                        Icon="People24" Cursor="Hand" />
                    <wpfui:NavigationItem
                        Click="CheckInRecordsPage_Click"
                        Content="签到记录"
                        Icon="History24" Cursor="Hand" />
                    <wpfui:NavigationItem
                        Click="UncheckedPeoplePage_Click"
                        Content="未签到"
                        Icon="Warning24" Cursor="Hand" />
                </wpfui:NavigationStore.Items>
                <wpfui:NavigationStore.Footer>
                    <wpfui:NavigationItem
                        Click="DatabaseManagementPage_Click"
                        Content="设置"
                        Icon="Settings24" Cursor="Hand" />
                </wpfui:NavigationStore.Footer>
            </wpfui:NavigationStore>

            <!-- 内容区域 -->
            <Border
                Grid.Column="1"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                CornerRadius="8,0,0,0">
                <Frame x:Name="RootFrame" NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>
    </Grid>
</Window>
