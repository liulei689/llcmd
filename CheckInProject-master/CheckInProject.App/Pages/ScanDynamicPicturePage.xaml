<Page x:Class="CheckInProject.App.Pages.ScanDynamicPicturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckInProject.App.Pages"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="ScanDynamicPicturePage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                Padding="20,15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <wpfui:SymbolIcon Symbol="Camera24" FontSize="24" Margin="0,0,10,0"
                                      Foreground="{DynamicResource SystemAccentColorBrush}"/>
                    <TextBlock Text="动态人脸识别" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 摄像头选择 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="摄像头：" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                    <ComboBox x:Name="CameraSelector" ItemsSource="{Binding CameraDevices}" 
                              Width="200" SelectedIndex="{Binding SelectedCameraIndex, Mode=TwoWay}"
                              IsEnabled="{Binding IsCameraRunning, Converter={StaticResource ReversedBooleanToBooleanConverter}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <wpfui:SymbolIcon Symbol="Camera24" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding CameraName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- 返回按钮 -->
                <Button Grid.Column="2" x:Name="BackButton" Click="BackButton_Click"
                        Style="{StaticResource DefaultButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="Home24" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="返回首页"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 中间摄像头预览区 -->
        <Grid Grid.Row="1" Margin="20,0">
            <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                    CornerRadius="12" ClipToBounds="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.15"/>
                </Border.Effect>
                
                <Grid>
                    <!-- 摄像头画面 -->
                    <Image x:Name="CameraImage" Source="{Binding SourceImage}" 
                           Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                    <!-- 未启动时的占位 -->
                    <Grid Visibility="{Binding IsCameraRunning, Converter={StaticResource ReversedBooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4">
                            <wpfui:SymbolIcon Symbol="CameraOff24" FontSize="80" Margin="0,0,0,20"/>
                            <TextBlock Text="摄像头未启动" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="点击下方按钮开始人脸识别" FontSize="14" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 加载中 -->
                    <Grid Background="{DynamicResource ApplicationBackgroundBrush}" 
                          Opacity="0.9"
                          Visibility="{Binding IsInitializing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <wpfui:ProgressRing Width="50" Height="50" IsIndeterminate="True"/>
                            <TextBlock Text="正在启动摄像头..." FontSize="16" Margin="0,15,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部控制栏 -->
        <Border Grid.Row="2" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                Padding="20,15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧状态信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource SystemAccentColorBrush}" 
                            CornerRadius="20" Padding="12,6" Margin="0,0,10,0"
                            Visibility="{Binding IsCameraRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,6,0"/>
                            <TextBlock Text="运行中" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <TextBlock x:Name="StatusText" Text="{Binding StatusMessage}" 
                               VerticalAlignment="Center" Opacity="0.8"/>
                </StackPanel>

                <!-- 中间控制按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 开始按钮 -->
                    <Button x:Name="StartButton" Click="StartButton_Click" 
                            Visibility="{Binding IsCameraRunning, Converter={StaticResource ReversedBooleanToVisibilityConverter}}"
                            Style="{StaticResource DefaultButtonStyle}" Height="45" Padding="25,0"
                            Background="{DynamicResource SystemAccentColorBrush}">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="Play24" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="开始识别" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <!-- 停止按钮 -->
                    <Button x:Name="StopButton" Click="StopButton_Click"
                            Visibility="{Binding IsCameraRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Style="{StaticResource DefaultButtonStyle}" Height="45" Padding="25,0">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="Stop24" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="停止" FontSize="16"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 右侧模式选择 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="识别模式：" VerticalAlignment="Center" Margin="0,0,10,0" Opacity="0.7"/>
                    <ComboBox x:Name="ModeSelector" SelectedIndex="{Binding RecognitionMode, Mode=TwoWay}" 
                              Width="140" IsEnabled="{Binding IsCameraRunning, Converter={StaticResource ReversedBooleanToBooleanConverter}}">
                        <ComboBoxItem>单人识别</ComboBoxItem>
                        <ComboBoxItem>多人识别</ComboBoxItem>
                    </ComboBox>
                    <CheckBox Content="连续识别" IsChecked="{Binding KeepRecognizing, Mode=TwoWay}" 
                              VerticalAlignment="Center" Margin="15,0,0,0"
                              IsEnabled="{Binding IsCameraRunning, Converter={StaticResource ReversedBooleanToBooleanConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 识别成功提示弹窗 -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="{DynamicResource ApplicationBackgroundBrush}" 
                Opacity="0.95"
                Visibility="{Binding ShowSuccessPopup, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <wpfui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="100" 
                                  Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                <TextBlock Text="识别成功！" FontSize="36" FontWeight="Bold" 
                           Margin="0,20,0,10" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding RecognizedName}" FontSize="28" 
                           Foreground="{DynamicResource SystemAccentColorBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding SuccessTime}" FontSize="14" Opacity="0.5"
                           Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
