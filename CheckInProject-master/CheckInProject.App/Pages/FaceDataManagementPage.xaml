<Page x:Class="CheckInProject.App.Pages.FaceDataManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckInProject.App.Pages"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="FaceDataManagementPage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Background="{DynamicResource ApplicationBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                Padding="20,15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <wpfui:SymbolIcon Symbol="Database24" FontSize="24" Margin="0,0,10,0"
                                      Foreground="{DynamicResource SystemFillColorSuccessBrush}"/>
                    <TextBlock Text="人脸数据库管理" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 统计信息 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="{DynamicResource SystemAccentColorBrush}" CornerRadius="15" Padding="12,5" Margin="0,0,10,0">
                        <TextBlock Text="{Binding TotalCountText}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="2" x:Name="BackButton" Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Symbol="Home24" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="返回首页"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 操作按钮栏 -->
        <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                Padding="20,15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧批量操作 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="ImportFolderButton" Click="ImportFolderButton_Click" 
                            Style="{StaticResource DefaultButtonStyle}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="FolderOpen24" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="从文件夹批量导入"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="ClearAllButton" Click="ClearAllButton_Click" 
                            Style="{StaticResource DefaultButtonStyle}" Background="{DynamicResource SystemFillColorCriticalBrush}">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="Delete24" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="清空数据库"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 中间状态信息 -->
                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7"/>

                <!-- 右侧单个添加 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="AddFromFileButton" Click="AddFromFileButton_Click"
                            Style="{StaticResource DefaultButtonStyle}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="Image24" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="从图片添加"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="AddFromCameraButton" Click="AddFromCameraButton_Click"
                            Style="{StaticResource DefaultButtonStyle}"
                            Background="{DynamicResource SystemAccentColorBrush}">
                        <StackPanel Orientation="Horizontal">
                            <wpfui:SymbolIcon Symbol="Camera24" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="摄像头录入"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 摄像头录入弹窗 -->
        <Border Grid.Row="2" x:Name="CameraPanel" Visibility="Collapsed"
                Background="{DynamicResource ApplicationBackgroundBrush}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 弹窗标题 -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="摄像头录入" FontSize="18" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" x:Name="CloseCameraPanelButton" Click="CloseCameraPanelButton_Click"
                            Style="{StaticResource DefaultButtonStyle}" Padding="8,4">
                        <wpfui:SymbolIcon Symbol="Dismiss24" FontSize="16"/>
                    </Button>
                </Grid>

                <!-- 预览画面 -->
                <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                        CornerRadius="8" ClipToBounds="True" Margin="0,0,0,15">
                    <Grid>
                        <Image Source="{Binding CameraPreviewSource}" Stretch="Uniform"/>
                        <Grid Visibility="{Binding IsCameraPreviewing, Converter={StaticResource ReversedBooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4">
                                <wpfui:SymbolIcon Symbol="CameraOff24" FontSize="48" Margin="0,0,0,10"/>
                                <TextBlock Text="点击开始预览" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- 表单输入 -->
                <Grid Grid.Row="2" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="姓名：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="NewPersonNameTextBox" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="编号：" VerticalAlignment="Center" Margin="15,0,8,0"/>
                    <TextBox Grid.Column="3" x:Name="NewPersonClassIdTextBox" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="4" Content="裁切人脸" IsChecked="{Binding TrimImageWhenEncoding}" 
                              VerticalAlignment="Center" Margin="15,0,0,0"/>
                </Grid>

                <!-- 控制按钮 -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" x:Name="CameraSelector" ItemsSource="{Binding CameraDevices}" 
                              Width="200" DisplayMemberPath="CameraName" SelectedIndex="{Binding SelectedCameraIndex}"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="StartPreviewButton" Click="StartPreviewButton_Click"
                                Style="{StaticResource DefaultButtonStyle}" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Symbol="Play24" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="开始预览"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="StopPreviewButton" Click="StopPreviewButton_Click"
                                Style="{StaticResource DefaultButtonStyle}" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Symbol="Stop24" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="停止"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="CaptureAndSaveButton" Click="CaptureAndSaveButton_Click"
                                Style="{StaticResource DefaultButtonStyle}"
                            Background="{DynamicResource SystemAccentColorBrush}">
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Symbol="CameraAdd24" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="拍照保存"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 数据列表 -->
        <Grid Grid.Row="2" x:Name="DataListPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 搜索框 -->
            <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                    Padding="20,10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="SearchTextBox" 
                             TextChanged="SearchTextBox_TextChanged"
                             VerticalAlignment="Center">
                        <TextBox.Tag>
                            <StackPanel Orientation="Horizontal">
                                <wpfui:SymbolIcon Symbol="Search24" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock Text="搜索姓名或编号..."/>
                            </StackPanel>
                        </TextBox.Tag>
                    </TextBox>
                </Grid>
            </Border>

            <!-- 列表 -->
            <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                    CornerRadius="8" Margin="0">
                <DataGrid x:Name="FaceDataDataGrid" ItemsSource="{Binding FilteredFaceDataList}" 
                          AutoGenerateColumns="False" IsReadOnly="True" 
                          SelectionMode="Single" GridLinesVisibility="Horizontal"
                          BorderThickness="0" Background="Transparent" RowHeight="60">
                    <DataGrid.Columns>
                        <!-- 头像预览列 -->
                        <DataGridTemplateColumn Header="头像" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="50" Height="50" CornerRadius="25" ClipToBounds="True" 
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Background="{DynamicResource ControlFillColorDefaultBrush}">
                                        <Image Source="{Binding ProfilePicture, Converter={StaticResource Base64ToImageConverter}}" 
                                               Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <Trigger Property="Source" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="180">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="编号" Binding="{Binding ClassID}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="操作" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Click="EditButton_Click" Tag="{Binding}" 
                                                Style="{StaticResource DefaultButtonStyle}" 
                                                Padding="8,4" Margin="0,0,5,0">
                                            <wpfui:SymbolIcon Symbol="Edit24" FontSize="14"/>
                                        </Button>
                                        <Button Click="DeleteButton_Click" Tag="{Binding}" 
                                                Style="{StaticResource DefaultButtonStyle}" 
                                                Padding="8,4"
                                                Background="{DynamicResource SystemFillColorCriticalBrush}">
                                            <wpfui:SymbolIcon Symbol="Delete24" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="45"/>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Border>

            <!-- 空状态 -->
            <Grid Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" 
                  Grid.RowSpan="2">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4">
                    <wpfui:SymbolIcon Symbol="Database24" FontSize="64" Margin="0,0,0,15"/>
                    <TextBlock Text="暂无数据" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="请点击上方按钮添加人脸数据" FontSize="14" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 图片预览添加弹窗 -->
        <Border Grid.Row="2" x:Name="ImagePreviewPanel" Visibility="Collapsed"
                Background="{DynamicResource ApplicationBackgroundBrush}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 弹窗标题 -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="图片预览确认" FontSize="18" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" x:Name="CloseImagePreviewButton" Click="CloseImagePreviewButton_Click"
                            Style="{StaticResource DefaultButtonStyle}" Padding="8,4">
                        <wpfui:SymbolIcon Symbol="Dismiss24" FontSize="16"/>
                    </Button>
                </Grid>

                <!-- 图片预览 -->
                <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                        CornerRadius="8" ClipToBounds="True" Margin="0,0,0,15">
                    <Image x:Name="PreviewImage" Stretch="Uniform" MaxHeight="300"/>
                </Border>

                <!-- 检测状态 -->
                <Border Grid.Row="2" Background="{DynamicResource SystemFillColorSuccessBrush}" 
                        CornerRadius="8" Padding="10,8" Margin="0,0,0,15"
                        x:Name="FaceDetectStatusBorder">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <wpfui:SymbolIcon Symbol="CheckmarkCircle24" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock x:Name="FaceDetectStatusText" Text="已检测到人脸" Foreground="White" FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- 表单输入 -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="姓名：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="PreviewNameTextBox" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="编号：" VerticalAlignment="Center" Margin="15,0,8,0"/>
                    <TextBox Grid.Column="3" x:Name="PreviewClassIdTextBox" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="15,0,0,0">
                        <Button x:Name="CancelAddImageButton" Click="CancelAddImageButton_Click"
                                Style="{StaticResource DefaultButtonStyle}" Margin="0,0,10,0">
                            <TextBlock Text="取消"/>
                        </Button>
                        <Button x:Name="ConfirmAddImageButton" Click="ConfirmAddImageButton_Click"
                                Style="{StaticResource DefaultButtonStyle}"
                                Background="{DynamicResource SystemAccentColorBrush}">
                            <TextBlock Text="确认添加"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- 编辑弹窗 -->
        <Border Grid.Row="2" x:Name="EditPanel" Visibility="Collapsed"
                Background="{DynamicResource ApplicationBackgroundBrush}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题栏 -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="编辑信息" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" x:Name="CloseEditPanelButton" Click="CloseEditPanelButton_Click"
                            Style="{StaticResource DefaultButtonStyle}" Padding="8,4">
                        <wpfui:SymbolIcon Symbol="Dismiss24" FontSize="16"/>
                    </Button>
                </Grid>
                
                <!-- 内容区 -->
                <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}" 
                        CornerRadius="12" Padding="30" MaxWidth="450" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- 头像预览 -->
                        <Border Width="120" Height="120" CornerRadius="60" ClipToBounds="True" 
                                HorizontalAlignment="Center" Margin="0,0,0,20"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}">
                            <Image x:Name="EditProfileImage" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 姓名 -->
                        <TextBlock Text="姓名" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox x:Name="EditNameTextBox" Margin="0,0,0,15" FontSize="14"/>
                        
                        <!-- 编号 -->
                        <TextBlock Text="编号" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox x:Name="EditClassIdTextBox" Margin="0,0,0,25" FontSize="14"/>
                        
                        <!-- 按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="CancelEditButton" Click="CancelEditButton_Click" 
                                    Content="取消" Style="{StaticResource DefaultButtonStyle}" 
                                    Width="100" Height="35" Margin="0,0,15,0"/>
                            <Button x:Name="SaveEditButton" Click="SaveEditButton_Click" 
                                    Content="确认保存" Style="{StaticResource DefaultButtonStyle}" 
                                    Background="{DynamicResource SystemAccentColorBrush}" 
                                    Width="100" Height="35"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
